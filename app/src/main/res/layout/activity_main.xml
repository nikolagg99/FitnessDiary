<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gym_wallpaper"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/btnSelectDate"></Button>

    <EditText
        android:id="@+id/textViewForExercise"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Exercise"
        android:gravity="center_horizontal"
        android:background="@color/cardview_light_background"></EditText>
    <EditText
        android:id="@+id/textViewForSeries"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:hint="Series"
        android:gravity="center_horizontal"
        android:background="@color/cardview_light_background"></EditText>
    <EditText
        android:id="@+id/textViewForReps"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:hint="Reps"
        android:gravity="center_horizontal"
        android:background="@color/cardview_light_background"></EditText>
    <EditText
        android:id="@+id/textViewForWeight"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:hint="Weight(kg)"
        android:gravity="center_horizontal"
        android:background="@color/cardview_light_background"></EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add exercise"
        android:id="@+id/btnAddExercise"></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Diary"
        android:id="@+id/btnHistoryOfExercises"></Button>

</LinearLayout>